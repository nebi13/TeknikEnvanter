@model Person
<div class="modal fade" id="personInfoModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Kişi Bilgileri</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form class="form-group">
                    <div class="form-inline">
                        <span style="min-width:125px;text-align:left!important;">Ad Soyad</span>
                        :<label style="margin-left:20px;">@Model.Name</label>
                    </div>
                    <div class="form-inline">
                        <label style="min-width:125px;">Tc No</label>:
                        <label style="margin-left:20px;">@Model.Tckn</label>
                    </div>
                    <div class="form-inline">
                        <label style="min-width:125px;">Sıra No</label>:
                        <label style="margin-left:20px;">@Model.OrderNo</label>
                    </div>
                    <div class="form-inline">
                        <label style="min-width: 125px;">Doğum Yeri</label>:
                        <label style="margin-left:20px;">@Model.BirthPlace</label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>